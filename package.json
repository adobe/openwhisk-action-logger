{
  "name": "@adobe/openwhisk-action-logger",
  "version": "2.2.0",
  "description": "Logger for OpenWhisk Actions",
  "license": "Apache-2.0",
  "repository": "https://github.com/adobe/openwhisk-action-logger",
  "bugs": "https://github.com/adobe/openwhisk-action-logger/issues",
  "keywords": [
    "openwhisk"
  ],
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "scripts": {
    "lint": "./node_modules/.bin/eslint .",
    "test": "nyc --reporter=text --reporter=lcov mocha --lines 100 --funcs 100 --branch 95",
    "test-ci": "npm run lint && npm run test && codecov",
    "docs": "npx jsdoc2md -t jsdoc2md/README.hbs src/*.js > README.md; echo",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@adobe/helix-log": "4.5.1",
    "cls-hooked": "^4.2.2"
  },
  "devDependencies": {
    "@adobe/openwhisk-action-utils": "4.2.1",
    "@semantic-release/changelog": "5.0.0",
    "@semantic-release/git": "9.0.0",
    "codecov": "3.6.5",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-plugin-header": "3.0.0",
    "eslint-plugin-import": "2.20.1",
    "ghooks": "2.0.4",
    "jsdoc-to-markdown": "5.0.3",
    "lint-staged": "10.0.8",
    "mocha": "7.1.0",
    "mocha-junit-reporter": "1.23.3",
    "nock": "12.0.2",
    "nyc": "15.0.0",
    "semantic-release": "17.0.4"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
