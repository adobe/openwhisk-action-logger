{
  "name": "@adobe/openwhisk-action-logger",
  "version": "1.0.1",
  "description": "Logger for OpenWhisk Actions",
  "license": "Apache-2.0",
  "repository": "https://github.com/adobe/openwhisk-action-logger",
  "bugs": "https://github.com/adobe/openwhisk-action-logger/issues",
  "keywords": [
    "openwhisk"
  ],
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "scripts": {
    "lint": "./node_modules/.bin/eslint .",
    "test": "nyc --reporter=text --reporter=lcov mocha --lines 100 --funcs 100 --branch 95",
    "test-ci": "npm run lint && npm run test && codecov",
    "docs": "npx jsdoc2md -t jsdoc2md/README.hbs src/*.js > README.md; echo",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@adobe/helix-log": "4.1.0",
    "dotenv": "^8.2.0",
    "cls-hooked": "^4.2.2"
  },
  "devDependencies": {
    "@adobe/openwhisk-action-utils": "2.7.3",
    "@semantic-release/changelog": "3.0.6",
    "@semantic-release/git": "7.0.18",
    "codecov": "3.6.1",
    "eslint": "6.7.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-plugin-header": "3.0.0",
    "eslint-plugin-import": "2.18.2",
    "ghooks": "2.0.4",
    "jsdoc-to-markdown": "5.0.3",
    "lint-staged": "9.4.3",
    "mocha": "6.2.2",
    "mocha-junit-reporter": "1.23.1",
    "nock": "11.7.0",
    "nyc": "14.1.1",
    "semantic-release": "15.13.31"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
